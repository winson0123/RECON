datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model RecallIndex {
  id        Int         @id @default(autoincrement())
  indexName String      @unique
  captures  Capture[]
}

model Capture {
  id            Int       @id @default(autoincrement())
  timestamp     DateTime
  imageToken    String
  appName       String
  windowTitle   String
  strings       String?
  windowsAppId  String
  fallbackUri   String?
  path          String
  indexId       Int
  recallIndex   RecallIndex @relation(fields: [indexId], references: [id], onDelete: Cascade)
}
